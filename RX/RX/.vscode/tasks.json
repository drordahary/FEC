{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"Deserializer.cpp",
				"FileBuilder.cpp",
				"RXReceiver.cpp",
				"RXDataReceiver.cpp",
				"RedisHandler.cpp",
				"RXMetaDataReceiver.cpp",
				"HierarchyBuilder.cpp",
				"Settings.cpp",
				"FileTracker.cpp",
				"FileMonitor.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lhiredis",
				"-pthread"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}